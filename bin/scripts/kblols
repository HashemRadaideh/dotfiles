#   setxkbmap -layout us -variant dvorak-programmer
# esac

if setxkbmap -query | grep -q us,ara ; then 
  setxkbmap -layout es,de,fr;
  # -layout us,ara,es,de,fr
  # -layout us,us,us -variant qwerty,colemak,dvorak-programmer
else 
  setxkbmap -layout us,ara;
fi

xmodmap -e 'keycode 135 = Super_R'
