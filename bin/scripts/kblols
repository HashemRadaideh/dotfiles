#!/bin/zsh
# KeyBoard Language Or Layout  Switcher (kblols)

CURRENT_LANGUAGE="$(setxkbmap -query | grep -E 'layout|variant' | awk '{print $2}')"

# localectl list-keymaps | grep 'dvorak'
