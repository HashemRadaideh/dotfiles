# Settings
set previewer previewer
set cleaner cleaner

set ignorecase true
set hidden false

set drawbox false
set icons true

set ratios 1:2:2
set info size:time

# Functions
cmd q :quit
cmd wq :quit
cmd wqa :quit
cmd x :quit
cmd xa :quit

cmd archive ${{
  printf "File name: "
  read name
  archive $f $name
}}

cmd unarchive ${{
  unarchive $f
}}

cmd find_files ${{
	printf "File name: "
	read name
  temp=$(sudo find / -iname $name)
  echo $temp | fzf
}}

# find files with fzf
cmd fzf_jump ${{
  dirs="$(find . -maxdepth 3 | fzf --header='Jump to:')"
  if [ -f "$dirs" ]; then
	  cmd="select"
  elif [ -d "$dirs" ]; then
	  cmd="cd"
  fi
  lf -remote "send $id $cmd \"$dirs\""
}}

# create a new file with path
cmd create_file ${{
  printf "File name: "
  read name

  last_char="$(echo "${name:${#name}-1:1}")"
  if [[ $last_char == "/" ]]; then
    mkdir -p $name
    exit
  fi

  if echo "$name" | grep -q "/"; then
    mkdir -p $(sed 's/\(.*\)\/.*/\1/' <<< $name) && touch $name 
    exit
  fi

  touch $name
}}

cmd set_wallpaper ${{
  if [ "$XDG_SESSION_TYPE" = "x11" ] && [ -n "${DISPLAY+x}" ]; then
    nitrogen --set-zoom-fill "$f"
  else
    swww img "$f" --transition-step 255
  fi
  # wal -q -i "$f"
}}

# Mappings
map b $bat "$f"

# open file in vscode
map c $code "$f"

# open file in default editor ($EDITOR variable)
map e $nvim "$f"

# open file in default gui editor ($VISUAL variable)
map v $emacs "$f"

map d
map m

map dd $trash-put "$f"
map dr $trash-restore

map ae $wine "$f"

map p paste
map x cut
map y copy

map C clear

map R reload

map f

map fa archive
map fu unarchive

map ff find_files

map <space>
map <space>ff fzf_jump

map a create_file

map sw set_wallpaper

map <backspace> set hidden!
map <enter> toggle
map <backspace2> unselect
map <esc> clear

map h :updir; redraw
map j :down; redraw
map k :up; redraw
map l :open; redraw

map J :updir; set dironly true; down; set dironly false; open; redraw
map K :updir; set dironly true; up; set dironly false; open; redraw
