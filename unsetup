  android-studio \
  unityhub \
  google-chrome-dev \
  brave-bin \
  onlyoffice-bin \
  notion-app \
  trello \
  evernote-beta-bin \
  tradingview \
  zoom \
  teams \
  spotify-dev \
  pipes.sh \
